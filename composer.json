{
    "name": "blessed-alliance/blessed-alliance",
    "description": "Blessed Alliance Team Site Integration",
    "license": "MIT",
    "type": "project",
    "keywords": ["ZF module"],
    "homepage": "http://www.aimworld.me/",
    "authors": [
        {
            "name": "Gab Amba",
            "email": "gamba@gabbydgab.com",
            "homepage": "http://www.gabbydgab.com/"  
        }
    ],
    "require": {
        "php": "^5.6 || ^7.0",
        "roave/security-advisories": "dev-master",
        "codingmatters/site-module-ini": "^1.0 || ~0.6"
    },
    "require-dev": {
        "zendframework/zend-test": "^3.0",
        "squizlabs/php_codesniffer": "^2.3",
        "phpbench/phpbench": "^0.11",
        "filp/whoops": "^2.0"
    },
    "autoload": {        
        "psr-4": {
            "BlessedAlliance\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BlessedAllianceTest\\": "test/"
        }
    },
    "extra": {        
        "zf": {
            "module": "BlessedAlliance",
            "config-provider": "BlessedAlliance\\ConfigProvider"
        }
    },
    "scripts": {
        "post-install-cmd"  : [    
            "@check"
        ],
        "post-update-cmd"   : [            
            "@check"
        ],
        "check": [
            "@test",
            "@cs" 
        ],
        "cs": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit"
    }
}
